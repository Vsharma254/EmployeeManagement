{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "experimentalDecorators": true,
        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "types": [
            "jasmine",
            "node"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "compileOnSave": false
}